<h2>Photogram</h2>
<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="name">
          Ben Walker
        </div>
      </div>
      <div class="image center-block">
       <%= link_to (image_tag post.image, class:'img-responsive'), post_path(post) %>
      </div>
      <p class="caption">
        <%= post.caption %>
      </p>
    </div>
  <% end %>
</div>

